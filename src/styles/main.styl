back(size)
    background-color #f1f1f1 
    box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
    padding: size + "%"
    margin 0 0 1% 0

colorText = #6f6d6d

html 
    color colorText
    
    nav
        back(0)
        text-align right

        & a
            display inline-block
            padding 1%
            color colorText
            text-decoration: none

            &:hover 
            &.active
                background-color #f87777
                color #f8f8f8

    div.images
        display grid
        grid-template-columns repeat(5, 1fr)
        grid-gap 0.5%
        back(1)

        & img
            width: 100%

    article 
        width 80%
        margin auto
        display grid
        grid-template-columns repeat(3, 1fr)
        grid-gap 4%

        & section
            display grid
            grid-template-columns 1fr 2fr
            grid-gap 2%
            align-items center
            back(2)

            & h3
                grid-column 1/3
                margin 0
                text-align center
            
            & img 
                width: 100%

    footer
        background-color colorText
        
        & h4
            padding 5px
            color #f8f8f8

    img.big
        display block
        height 50vh
        widght 50vw
        margin 0 auto
    
    section
        display grid
        grid-template-columns 1fr 1fr

    @media (max-width 650px)
        div.images 
            grid-template-columns 80%
            grid-gap 0.2%
            justify-content center
            align-content center
            padding 3% 0
        
        div.images > img
            height 100%

        article 
            margin-top 5%
            grid-template-columns 105%
            grid-gap 0.8%
        
        section
            grid-template-columns 1fr
        
        
        